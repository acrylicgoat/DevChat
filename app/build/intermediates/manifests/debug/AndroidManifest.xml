<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.acrylicgoat.devchat"
    android:versionCode="5"
    android:versionName="1.4" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <provider
            android:name="com.acrylicgoat.devchat.provider.NotesProvider"
            android:authorities="com.acrylicgoat.devchat.provider.NotesProvider" />
        <provider
            android:name="com.acrylicgoat.devchat.provider.DevelopersProvider"
            android:authorities="com.acrylicgoat.devchat.provider.DevelopersProvider" />

        <activity
            android:name="com.acrylicgoat.devchat.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.acrylicgoat.devchat.DevActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.acrylicgoat.devchat.DataTableActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>